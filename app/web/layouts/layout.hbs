                <a href="/invite_bot">Приглашение в канал</a>
            </div>
        </li>
        </ul>
    </nav>

    {{{body}}}

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const token = document.getElementsByName("token")[0].value;

        const backLink = document.querySelector('.backbtn a');
        backLink.setAttribute('href', `${backLink.href}?token=${token}`);
        
        const dropdownLinks = document.querySelectorAll('.dropdown-content a');

        dropdownLinks.forEach(link => {
            const originalHref = link.getAttribute('href');
            link.setAttribute('href', `${originalHref}?token=${token}`); 
        });
    });
</script>
</body>
</html>