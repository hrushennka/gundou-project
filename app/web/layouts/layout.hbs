<body style="margin: 0px;">
    <input type="hidden" name="token" value="{{token}}">
    <nav>
    <div class="logo">
    {{!-- <img src="/images/gund2.jpg" width="450" height="450" /> --}}

    <div class="bot-name">GUNDOU</div></div>
    <ul class="nav-list">
        <li class="backbtn">
            <a href="/main">Назад</a>
        </li>
        <!-- Выпадающий список -->
        <li class="dropdown">
            <a href="#" class="dropbtn">&#9776;</a>
            <div class="dropdown-content">
                <a href="/hello_msg">Приветственные сообщения</a>
                <a href="/send_msg">Отправка сообщений</a>
                <a href="/status_bar">Статус-бар</a>
